# layout.kv

<MainLayout>:
    orientation: 'vertical'

    # Header section with 10% height
    BoxLayout:
        size_hint_y: 0.1  # 10% of total height
        canvas.before:
            Color:
                rgba: 1, 0, 0, 1  # Red
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "Header Bar"
            font_size: 20
            halign: 'center'
            valign: 'middle'

        # Add a button in the header bar
        Button:
            text: "Set"
            size_hint: None, None
            size: self.parent.height * 0.8, self.parent.height * 0.8
            pos_hint: {"center_y": 0.5}
            on_press: root.open_settings()  # Call the open_settings function

    # Timer section with 10% height
    BoxLayout:
        size_hint_y: 0.1  # 10% of total height
        canvas.before:
            Color:
                rgba: 0, 1, 0, 1  # Green
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "button settings"
            font_size: 40
            halign: 'center'
            valign: 'middle'

    # Bottom section, 80%
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.8  # Remaining 50% of total height

        BoxLayout:
            canvas.before:
                Color:
                    rgba: 0, 0, 1, 1  # Blue
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: "Bottom Section 1"
                font_size: 20
                halign: 'center'
                valign: 'middle'
